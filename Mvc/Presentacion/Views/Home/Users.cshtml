@using  Ipstatuschecker.Dto
@model List<PingLogDtoResponse>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Status Overview</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f9f9f9;
        }
        .container {
            background: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            max-width: 600px;
            margin: auto;
        }
        h2 {
            color: #333;
        }
        .status {
            margin: 15px 0;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f0f0f0;
        }
        .user-info {
            margin-top: 10px; /* Adjusted spacing for better visual alignment */
        }
        .user-info p {
            margin: 5px 0;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>User Status Overview</h2>

        @foreach (var log in Model)
        {
            <div class="status">
                <h3>Status ID: <span>@log.Id</span></h3>
                <h4>Online Time:</h4>
                <ul>
                    @foreach (var onlineTime in log.OnlieTime)
                    {
                        <li>@onlineTime.ToString("g")</li>
                    }
                </ul>
                <h4>Offline Time:</h4>
                <ul>
                    @foreach (var offline in log.OflineTime)
                    {
                        <li>@offline.ToString("g")</li>
                    }
                </ul>
            </div>

            <div class="user-info">
                <h4>User Information</h4>
                <p><strong>ID:</strong> <span>@log._UserDto?.Id</span></p>
                <p><strong>Name:</strong> <span>@log._UserDto?.Name</span></p>
            </div>
        }
    </div>

</body>
</html>
